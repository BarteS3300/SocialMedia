<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MAP.interfaces.GUIControllerMessage">
   <children>
      <VBox alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="371.0" prefWidth="566.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="50.0" text="Search">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <TextField prefHeight="25.0" prefWidth="321.0">
                     <HBox.margin>
                        <Insets left="-40.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="NewMessage" mnemonicParsing="false" onAction="#NewMessage" prefHeight="25.0" prefWidth="115.0" text="New message" />
               </children>
            </HBox>
            <HBox prefHeight="238.0" prefWidth="370.0" spacing="30.0">
               <children>
                  <ListView fx:id="messageList" onMouseClicked="#openMessage" prefHeight="238.0" prefWidth="151.0" />
                  <Label fx:id="message" alignment="TOP_LEFT" prefHeight="239.0" prefWidth="385.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
